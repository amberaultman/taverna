<!doctype html>
<html>
  <head>
    <meta charset='utf-8'>

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no,maximum-scale=1.0">
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || 'Taverna San Marco' %></title>
    <%= stylesheet_link_tag 'https://cloud.typography.com/7426354/801368/css/fonts.css' %>
    <%= stylesheet_link_tag 'https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' %>
    <%= stylesheet_link_tag 'all' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css' %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-64396520-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>

  <body class='<%= page_classes %>'>
    <%= yield %>

    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js', 'all' %>
    <%= javascript_include_tag 'https://cf.chownowcdn.com/latest/static/integrations/ordering-modal.min.js', 'data-chownow-company-id'=>'13240' %>
    <%= javascript_include_tag 'https://widgets.resy.com/embed.js', 'all' %>
  </body>
</html>
